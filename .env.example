# =====================
# Supabase Configuration
# =====================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =====================
# App Configuration
# =====================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Next-AI SaaS Starter

# =====================
# Mode Configuration
# =====================
# development | production | test | mock
APP_MODE=development

# Mock Mode (skip real API calls, use mock data)
ENABLE_MOCK=false

# =====================
# AI Configuration
# =====================
# Provider: mock | openai | anthropic
AI_PROVIDER=mock
AI_MODEL=gpt-4o-mini
AI_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_MOCK_MODE=true
AI_RATE_LIMIT_PER_MINUTE=10

# OpenAI API Key (required if AI_PROVIDER=openai)
# OPENAI_API_KEY=your_openai_api_key

# =====================
# Credits Configuration
# =====================
DEFAULT_FREE_CREDITS=100
DEFAULT_PRO_CREDITS=1000
ANONYMOUS_QUOTA=3

# =====================
# Feature Flags
# =====================
# Enable /readme developer guide page (default: true in development, false in production)
ENABLE_README_PAGE=true
